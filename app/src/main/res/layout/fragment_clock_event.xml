<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ClockFragment">

    <TextView
        android:id="@+id/fragmentClockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clock"
        android:textAlignment="center"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toggleBtn" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:timePickerMode="spinner"
        app:layout_constraintBottom_toTopOf="@+id/toggleBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/alarmTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wpisz nazwe alarmu"
        android:inputType="text"
        android:minHeight="48dp" />

    <LinearLayout
        android:id="@+id/alarmOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/alarmCheckMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pon"/>

        <CheckBox
            android:id="@+id/alarmCheckTue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wt"/>

        <CheckBox
            android:id="@+id/alarmCheckWed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sr"/>

        <CheckBox
            android:id="@+id/alarmCheckThu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Czw"/>

        <CheckBox
            android:id="@+id/alarmCheckFri"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pt"/>

        <CheckBox
            android:id="@+id/alarmCheckSat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sb"/>

        <CheckBox
            android:id="@+id/alarmCheckSun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nd"/>

    </LinearLayout>

    <Button
        android:id="@+id/addAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:layout_gravity="right"
        android:layout_margin="20dp" />

    <Button
        android:id="@+id/cancelAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_gravity="left"
        android:layout_margin="20dp" />

    <TextView
        android:id="@+id/debug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarmy"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textSize="35dp" />

</LinearLayout>